<h1 style="margin-bottom: 10px">Register</h1>
<div class="alert alert-info">
        <p><strong>Please fill in the form to register to PaNsoft. Once registered, we will send you a validation email.</a></p>
</div>
<div class="row">
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="uniForm">
  <fieldset class="inlineLabels">
  	<div class="span8 columns">
  
  	<div class="ctrlHolder">
  	  	<label for="fos_user_registration_form_username">Username</label>
      	{{ form_widget(form.username, { 'attr': {'class': 'textInput medium'} }) }}
      	<p class="formHint">Please enter a username.</p>
  	</div>
  	<div class="ctrlHolder">
  	  	<label for="fos_user_registration_form_username">Email</label>
      	{{ form_widget(form.email, { 'attr': {'class': 'textInput medium'} }) }}
      	<p class="formHint">Please enter a valid email.</p>
  	</div>
  	
  	<div class="ctrlHolder">
  	  	<label for="fos_user_registration_form_username">Password</label>
      	{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'textInput medium'} }) }}
      	<p class="formHint">Please enter a valid email.</p>
  	</div>
  	
   	<div class="ctrlHolder">
  	  	<label for="fos_user_registration_form_username">Confirm Password</label>
      	{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'textInput medium'} }) }}
      	<p class="formHint">Please confirm your password.</p>
  	</div> 	
  	  {{ form_rest(form) }}  
  	</div>
  	<div class="span4 columns">
  
				<img src="{{ asset('bundles/eupandata/images/pandata-labs-europe-330.png') }}" />
			
  	</div>
    <div class="buttonHolder">
    	<label for="tos" class="secondaryAction"><input type="checkbox" id="tos" name="tos"/> I agree to the <a href="#tos-modal" data-toggle="modal">terms of service</a></label>
    	<button type="submit" id="_submit" name="_submit" class="btn-success btn-large">Register</button></div>
  </fieldset>
</form>
</div>
{% endblock content %}

